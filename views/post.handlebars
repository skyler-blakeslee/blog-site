<div class="text-center">
    <h2>{{post.name}}</h2>
    <p>{{{get_emoji}}}</p>
    <p>{{post.description}}</p>
    <p>Created by {{user.name}} on {{format_date post.date_created}}</p>

    <!-- Conditionally Display Comments-->
    {{#if comments}}
    <div class="col-md-6 post-list">
        <h3>Comments:</h3>

        {{#each comments as |comment|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4>{{comment.name}} --- {{comment.user.name}}</h4>
                <p>{{comment.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <!-- Conditionally render comment form if user is logged in-->
    {{#if logged_in}}
    <p>
    <form class="form new-comment-form">
        <div class="form-group">
            <label for="comment-desc">Comments:</label>
            <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
            <input type="hidden" id="post_id" value="{{id}}" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </div>
    </form>
    </p>
    {{/if}}

</div>

<script src="../js/post.js"></script>